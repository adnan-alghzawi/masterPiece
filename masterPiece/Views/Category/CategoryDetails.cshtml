@model List<masterPiece.Models.Product>

@{
    ViewData["Title"] = "Products by Category";
}

<h2 class="category-title text-center mb-5">@ViewBag.CategoryName Products</h2>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4 d-flex justify-content-center">
                <div class="product-card h-100">
                    <img src="@Url.Content("~/images/" + (product.ImagePath ?? "default.jpg"))" class="product-img" alt="@product.Name">
                    <div class="product-info">
                        <h5 class="product-title">@product.Name</h5>
                        <p class="product-desc">@product.Description</p>
                        <p class="product-price">@product.Price JOD</p>
                        <a href="/Products/ProductDetails/@product.Id" class="view-btn">View Details</a>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

@section Styles {
    @* <link rel="stylesheet" href="~/css/ProductByCategory.css" /> *@
    <style>
        body {
            background-color: #f4f8f3;
            font-family: 'Segoe UI', sans-serif;
        }

        .category-title {
            text-align: center;
            font-size: 2.8rem;
            font-weight: bold;
            margin: 50px 0 30px;
            color: #2e7d32;
        }




        .product-card {
            background-color: #ffffff;
            border-radius: 16px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            width: 100%; /* خلي الكرت ياخذ عرض العمود بدون تحكم يدوي */
        }


            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
            }

        .product-img {
            width: 100%;
            height: 230px;
            object-fit: cover;
            border-bottom: 1px solid #eee;
        }

        .product-info {
            padding: 20px;
            text-align: center;
        }

        .product-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: #2e7d32;
            margin-bottom: 10px;
        }

        .product-desc {
            font-size: 0.95rem;
            color: #666;
            min-height: 55px;
            margin-bottom: 10px;
        }

        .product-price {
            font-size: 1.1rem;
            font-weight: bold;
            color: #4caf50;
        }

        .view-btn {
            display: inline-block;
            margin-top: 15px;
            background-color: #4caf50;
            color: white;
            padding: 10px 20px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            transition: background 0.3s ease;
        }

            .view-btn:hover {
                background-color: #388e3c;
            }

       
    </style>
}
