@model List<masterPiece.Models.Product>

@{
    ViewData["Title"] = "Products by Category";
}

<h2 class="shop-category-title">@ViewBag.CategoryName Products</h2>

<div class="shop-wrapper container">
    <div class="row" style="display: flex;
            flex-direction: row;
            justify-content: space-evenly;
gap:20px;">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="shop-card">
                    <img src="@Url.Content("~/images/" + (product.ImagePath ?? "default.jpg"))" alt="@product.Name" class="shop-img" />
                    <div class="shop-info">
                        <h5 class="shop-title">@product.Name</h5>
                        <p class="shop-desc">@product.Description</p>
                        <p class="shop-price">@product.Price JOD</p>
                        <a href="/Products/ProductDetails/@product.ID" class="shop-btn">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<br />
<br />
<br />

@section Styles {
    <style>
        body {
            background-color: #f4f8f3;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .shop-category-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: bold;
            margin: 50px 0 30px;
            color: #2e7d32;
        }

        .shop-wrapper {
            padding: 0 15px;
            display: flex; 
            flex-direction: row;
            justify-content: space-evenly;
        }

        .shop-card {
            background-color: #ffffff;
            border-radius: 16px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

            .shop-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
            }

        .shop-img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-bottom: 1px solid #e0e0e0;
        }

        .shop-info {
            padding: 20px;
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            text-align: center;
        }

        .shop-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2e7d32;
            margin-bottom: 8px;
        }

        .shop-desc {
            font-size: 0.95rem;
            color: #666;
            margin-bottom: 12px;
        }

        .shop-price {
            font-size: 1.1rem;
            font-weight: bold;
            color: #4caf50;
            margin-bottom: 12px;
        }

        .shop-btn {
            background-color: #4caf50;
            color: white;
            padding: 10px 24px;
            border: none;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

            .shop-btn:hover {
                background-color: #388e3c;
            }
    </style>
}
