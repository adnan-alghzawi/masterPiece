@model List<masterPiece.Models.Product>
@{
    ViewData["Title"] = "Category Products";
    Layout = "_Admin";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container mt-4">
    <h2 class="text-success mb-4"><i class="fas fa-boxes"></i> Products in Category</h2>

    <table class="table table-bordered text-center">
        <thead class="table-success">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price (JOD)</th>
                
                <th>Image</th>
                <th>Is Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ID</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    
                    <td>
                        <img src="~/images/@product.ImagePath" alt="@product.Name" style="width:80px; height:80px; object-fit:cover;" />
                    </td>
                    <td>
                        @if (product.IsActive == true)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
