@model masterPiece.Models.User

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="checkout-container" style="margin-top: 5%;">
    <h2 style="text-align:center; color:#4CAF50;">✏️ Edit Your Profile</h2>

    <form asp-action="EditProfile" method="post" style="max-width: 400px; margin: auto;">
        <div class="form-group">
            <label>Username</label>
            <input asp-for="Username" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" required />
        </div>

        <button type="submit" class="checkout-btn" style="margin-top: 20px;">💾 Save Changes</button>


    </form>
    
    <a href="/Users/ChangePassword" class="btn btn-outline-warning mt-4">
        🔐 Change Password
    </a>


    

</div>
