@model masterPiece.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="checkout-container" style="margin-top: 5%;">
    <h2 style="text-align:center; color:#4CAF50;">👤 My Profile</h2>

    <div style="padding: 20px;">
        <p><strong>Username:</strong> @Model.Username</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p><strong>User Type:</strong> @Model.UserType</p>

        <a href="/Users/MyOrders" class="checkout-btn" style="margin-top: 20px; display:inline-block;">📦 View My Orders</a>
    </div>
</div>
