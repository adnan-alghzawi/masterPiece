@model masterPiece.Models.User

@{
    ViewData["Title"] = "My Profile";
}

@section Styles {
    <style>
        .profile-wrapper {
            margin-top: 5%;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            background: #fff;
            border-radius: 16px;
            padding: 30px 40px;
            box-shadow: 0 8px 20px rgba(76, 175, 80, 0.1);
            border: 1px solid #e0f2f1;
        }

            .profile-wrapper h2 {
                text-align: center;
                color: #4CAF50;
                font-weight: bold;
                margin-bottom: 30px;
            }

        .profile-info p {
            font-size: 1.1rem;
            margin-bottom: 15px;
            color: #333;
        }

        .profile-info strong {
            color: #555;
        }

        .profile-actions a {
            display: block;
            width: 100%;
            margin-bottom: 12px;
            padding: 12px;
            text-align: center;
            border-radius: 8px;
            font-weight: 500;
            color: white;
            text-decoration: none;
            transition: all 0.2s ease-in-out;
        }

            .profile-actions a:first-child {
                background-color: #4CAF50;
            }

                .profile-actions a:first-child:hover {
                    background-color: #45a049;
                }

            .profile-actions a:last-child {
                background-color: #2196F3;
            }

                .profile-actions a:last-child:hover {
                    background-color: #1976D2;
                }
    </style>
}

<div class="profile-wrapper">
    <h2>👤 My Profile</h2>

    <div class="profile-info">
        <p><strong>Username:</strong> @Model.Username</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p><strong>User Type:</strong> @Model.UserType</p>
    </div>

    <div class="profile-actions">
        <a href="/Users/MyOrders">📦 View My Orders</a>
        <a href="/Users/EditProfile">✏️ Edit Profile</a>
    </div>
</div>
