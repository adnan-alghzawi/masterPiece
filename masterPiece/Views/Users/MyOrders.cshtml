@model List<masterPiece.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="checkout-container" style="margin-top: 5%;">
    <h2 style="text-align:center; color:#4CAF50;">📦 My Orders</h2>

    @if (!Model.Any())
    {
        <p style="text-align:center; margin-top:20px;">You have no orders yet.</p>
    }
    else
    {
        <table class="table table-bordered" style="width: 100%; margin-top: 20px;">
            <thead style="background-color: #4CAF50; color: white;">
                <tr>
                    @* <th>Order ID</th> *@
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        @* <td>@order.Id</td> *@
                        @* <td>@order.OrderDate.ToShortDateString()</td> *@
                        <td>@(order.OrderDate?.ToShortDateString())</td>

                        <td>@order.Status</td>
                        <td>@string.Format("${0:0.00}", order.TotalAmount)</td>
                        <td>@order.DeliveryAddress</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
